<UserControl x:Class="EtherNetIPTool.Controls.IpOctetInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="24" d:DesignWidth="180"
             Focusable="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>

        <!-- Octet 1 (0-255) -->
        <TextBox x:Name="Octet1"
                 Grid.Column="0"
                 MaxLength="3"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="Octet_PreviewTextInput"
                 TextChanged="Octet_TextChanged"
                 GotFocus="Octet_GotFocus"
                 PreviewKeyDown="Octet_PreviewKeyDown"/>

        <TextBlock Grid.Column="1" Text="." VerticalAlignment="Center" Margin="2,0"/>

        <!-- Octet 2 (0-255) -->
        <TextBox x:Name="Octet2"
                 Grid.Column="2"
                 MaxLength="3"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="Octet_PreviewTextInput"
                 TextChanged="Octet_TextChanged"
                 GotFocus="Octet_GotFocus"
                 PreviewKeyDown="Octet_PreviewKeyDown"/>

        <TextBlock Grid.Column="3" Text="." VerticalAlignment="Center" Margin="2,0"/>

        <!-- Octet 3 (0-255) -->
        <TextBox x:Name="Octet3"
                 Grid.Column="4"
                 MaxLength="3"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="Octet_PreviewTextInput"
                 TextChanged="Octet_TextChanged"
                 GotFocus="Octet_GotFocus"
                 PreviewKeyDown="Octet_PreviewKeyDown"/>

        <TextBlock Grid.Column="5" Text="." VerticalAlignment="Center" Margin="2,0"/>

        <!-- Octet 4 (0-255) -->
        <TextBox x:Name="Octet4"
                 Grid.Column="6"
                 MaxLength="3"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="Octet_PreviewTextInput"
                 TextChanged="Octet_TextChanged"
                 GotFocus="Octet_GotFocus"
                 PreviewKeyDown="Octet_PreviewKeyDown"/>
    </Grid>
</UserControl>
