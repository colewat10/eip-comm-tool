<Window x:Class="EtherNetIPTool.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration In Progress"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#F0F0F0"
        FontFamily="Segoe UI"
        FontSize="9pt"
        ShowInTaskbar="False"
        Closing="Window_Closing">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Writing configuration to device..."
                   FontWeight="Bold"
                   FontSize="10pt"
                   HorizontalAlignment="Center"/>

        <!-- Progress Text (REQ-3.5.5-006: "Sending configuration... (X/Y)") -->
        <TextBlock Grid.Row="2"
                   x:Name="ProgressText"
                   Text="Preparing..."
                   HorizontalAlignment="Center"
                   FontSize="9pt"/>

        <!-- Current Operation -->
        <TextBlock Grid.Row="4"
                   x:Name="CurrentOperationText"
                   Text=""
                   HorizontalAlignment="Center"
                   FontSize="8pt"
                   Foreground="#808080"/>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="6"
                     x:Name="ProgressBar"
                     Height="20"
                     Minimum="0"
                     Maximum="100"
                     Value="0"/>
    </Grid>
</Window>
