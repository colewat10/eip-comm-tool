<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color scheme from PRD REQ-5.1 -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="SectionHeaderBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="TableHeaderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="AlternateRowBrush" Color="#F8F8F8"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="LinkLocalBrush" Color="#FFFACD"/>
    <SolidColorBrush x:Key="ConflictBrush" Color="#FFE6E6"/>
    <SolidColorBrush x:Key="NormalBrush" Color="White"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextBrush" Color="#000000"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#808080"/>
    <SolidColorBrush x:Key="ErrorTextBrush" Color="Red"/>
    <SolidColorBrush x:Key="WarningTextBrush" Color="Orange"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#0078D7"/>

</ResourceDictionary>
