<Window x:Class="EtherNetIPTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EtherNetIPTool.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="768"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F0F0F0"
        FontFamily="Segoe UI"
        FontSize="9pt">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Height="20" Background="White">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Command="{Binding ExitApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Preferences" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Activity Log Viewer" Command="{Binding ShowActivityLogCommand}"/>
                <Separator/>
                <MenuItem Header="Export Device List to CSV" IsEnabled="False"/>
                <MenuItem Header="Clear Device List" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Refresh _NIC List" Command="{Binding RefreshNicListCommand}"/>
                <MenuItem Header="Refresh _Device Table" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_User Manual (F1)" IsEnabled="False"/>
                <MenuItem Header="_CIP Protocol Reference" IsEnabled="False"/>
                <MenuItem Header="_BootP/DHCP Reference" IsEnabled="False"/>
                <MenuItem Header="_Troubleshooting Guide" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="_About" Command="{Binding ShowAboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Background="#E8E8E8" BorderBrush="#D0D0D0" BorderThickness="0,1" Height="40">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side: NIC Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="NIC:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                    <ComboBox x:Name="NicComboBox"
                              ItemsSource="{Binding NetworkAdapters}"
                              SelectedItem="{Binding SelectedAdapter}"
                              DisplayMemberPath="DisplayName"
                              Width="400"
                              VerticalAlignment="Center"
                              ToolTip="Select network adapter for device communication">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" ToolTip="{Binding DetailedInfo}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="âŸ³"
                            Command="{Binding RefreshNicListCommand}"
                            Width="30"
                            Height="24"
                            Margin="5,0,0,0"
                            ToolTip="Refresh network adapter list"
                            FontSize="14pt"/>

                    <TextBlock Margin="20,0,0,0" VerticalAlignment="Center">
                        <Run Text="IP: " FontWeight="Bold"/>
                        <Run Text="{Binding SelectedAdapter.IPAddress, Mode=OneWay, FallbackValue='-'}"/>
                        <Run Text="  Subnet: " FontWeight="Bold"/>
                        <Run Text="{Binding SelectedAdapter.SubnetMask, Mode=OneWay, FallbackValue='-'}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Right side: Clock -->
                <TextBlock Grid.Column="1"
                           Text="{Binding CurrentTime}"
                           VerticalAlignment="Center"
                           FontSize="9pt"
                           Foreground="#666666"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="20" Background="#F0F0F0">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding StatusText}" FontSize="8pt"/>
            </StatusBarItem>
            <Separator Grid.Column="1"/>
            <StatusBarItem Grid.Column="2">
                <TextBlock Text="{Binding PrivilegeStatus}" FontSize="8pt"/>
            </StatusBarItem>
            <Separator Grid.Column="3"/>
            <StatusBarItem Grid.Column="4">
                <TextBlock Text="No device selected" FontSize="8pt"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area -->
        <Grid DockPanel.Dock="Top" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Mode and Control Panel -->
            <Border Grid.Row="0"
                    Background="#E8E8E8"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Mode Selection -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Mode:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <RadioButton Content="EtherNet/IP"
                                     IsChecked="True"
                                     Margin="0,2"
                                     ToolTip="Device discovery and configuration via EtherNet/IP protocol"/>
                        <RadioButton Content="BootP/DHCP"
                                     IsEnabled="{Binding IsAdministrator}"
                                     Margin="0,2"
                                     ToolTip="{Binding PrivilegeStatus}"/>
                    </StackPanel>

                    <!-- Right: Auto-Browse Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox Content="Auto-Browse"
                                  IsChecked="True"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"
                                  ToolTip="Enable automatic periodic device scanning"/>
                        <TextBlock Text="Interval:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBox Text="5"
                                 Width="40"
                                 VerticalAlignment="Center"
                                 ToolTip="Scan interval in seconds (1-60)"/>
                        <TextBlock Text="s"
                                   VerticalAlignment="Center"
                                   Margin="2,0,15,0"/>
                        <Button Content="Scan Now"
                                Width="80"
                                Margin="0,0,10,0"
                                ToolTip="Perform immediate device scan"/>
                        <Button Content="Clear List"
                                Width="80"
                                ToolTip="Clear all devices from table"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Device Table Section Header -->
            <Border Grid.Row="1"
                    Background="#E8E8E8"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1,1,1,0"
                    Height="20">
                <TextBlock Text="0 device(s)"
                           Margin="5,0"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="8pt"/>
            </Border>

            <!-- Device Table -->
            <Border Grid.Row="2"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1,0,1,1">
                <DataGrid x:Name="DeviceTable"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          RowHeight="20"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F8F8F8"
                          Background="White"
                          BorderThickness="0"
                          CanUserResizeRows="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          FontSize="9pt">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Width="30" IsReadOnly="True"/>
                        <DataGridTextColumn Header="MAC Address" Width="140" IsReadOnly="True"/>
                        <DataGridTextColumn Header="IP Address" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Subnet Mask" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Vendor" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Model" Width="200" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" Width="80" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0,10,0,0">
                <Button Content="Configure Selected Device"
                        Width="180"
                        Height="24"
                        IsEnabled="False"
                        ToolTip="Open configuration dialog for selected device"/>
                <Button Content="Refresh Device Info"
                        Width="150"
                        Height="24"
                        Margin="10,0,0,0"
                        IsEnabled="False"
                        ToolTip="Refresh information for selected device"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
